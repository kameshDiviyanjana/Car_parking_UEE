        <item name="shapeAppearanceOverlay">@style/custom_card_view_style_cirles</item>
    </style>
    <style name="custom_card_view_style_cirles" parent="">

        <item name="cornerFamily" >rounded</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>


    </style>

    <style name="custom_card_vive_camer" parent="Widget.MaterialComponents.CardView">
