<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentScreen">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <EditText
            android:id="@+id/edtcardname"
            android:layout_width="364dp"
            android:layout_height="65dp"
            android:layout_marginTop="112dp"
            android:background="@drawable/textshap"
            android:ems="10"
            android:hint="Card Name"
            android:inputType="text"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/views"
            style="@style/custom_card_view_style_dashborde"
            android:layout_width="275dp"
            android:layout_height="110dp"
            android:background="#C82A2A"
            android:backgroundTint="#F3AB42"
            app:cardBackgroundColor="#F6F5F5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.card.MaterialCardView>
        <EditText
            android:id="@+id/edtcvv"
            android:layout_width="364dp"
            android:layout_height="65dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/textshap"
            android:ems="10"
            android:hint="CVV"
            android:inputType="text"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtexpdate"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edtcardnumber"
            android:layout_width="364dp"
            android:layout_height="65dp"
            android:layout_marginTop="46dp"
            android:background="@drawable/textshap"
            android:ems="10"
            android:hint="Card Number"
            android:inputType="text"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtcardname"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edtexpdate"
            android:layout_width="364dp"
            android:layout_height="65dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/textshap"
            android:ems="10"
            android:hint="Exp Month/Year"
            android:inputType="text"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtcardnumber"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnpay"
            android:layout_width="262dp"
            android:layout_height="62dp"
            android:layout_marginTop="36dp"
            android:text="Pay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtcvv" />

        <Button
            android:id="@+id/btncancelpay"
            android:layout_width="262dp"
            android:layout_height="62dp"
            android:layout_marginBottom="52dp"
            android:text="Cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnpay" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>