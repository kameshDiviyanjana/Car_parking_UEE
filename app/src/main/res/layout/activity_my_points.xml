<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPoints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnloyaltygohome"
            android:layout_width="203dp"
            android:layout_height="53dp"
            android:backgroundTint="#E8D213"
            android:text="My Dashboard"
            android:textColor="#605B5B"
            android:textStyle="bold"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.745" />

        <TextView
            android:id="@+id/txtloyalty"
            android:layout_width="257dp"
            android:layout_height="114dp"
            android:layout_marginTop="208dp"
            android:text="You have 10 Loyalty Points"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/btnloyaltygohome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.098" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/views"
            style="@style/custom_card_view_style_dashborde"
            android:layout_width="282dp"
            android:layout_height="164dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="#C82A2A"
            android:backgroundTint="#F3AB42"
            app:cardBackgroundColor="#F6F5F5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>